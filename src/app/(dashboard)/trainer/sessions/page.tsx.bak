  return (
    <div className="space-y-6">
      <div className="flex justify-between items-center">
        <div>
          <h1 className="text-2xl font-bold text-white">Edzések</h1>
          <p className="text-white/60">Edzések kezelése és ütemezése</p>
        </div>
        <button
          onClick={() => {
            const tomorrow = new Date()
            tomorrow.setDate(tomorrow.getDate() + 1)
            setFormData(prev => ({
              ...prev,
              startDate: moment(tomorrow).format("YYYY-MM-DD"),
              startTime: "18:00",
              endDate: moment(tomorrow).format("YYYY-MM-DD"),
              endTime: "19:30",
            }))
            setIsCreateDialogOpen(true)
          }}
          className="flex items-center gap-2 px-4 py-2.5 bg-[#D2F159] text-[#171725] rounded-xl font-semibold hover:bg-[#c4e350] transition-colors"
        >
          <Plus className="w-5 h-5" />
          Új edzés
        </button>
      </div>

      <div className="bg-[#1E1E2D] rounded-2xl p-6 border border-white/10">
        <div className="h-[600px] calendar-dark">
          <Calendar
            localizer={localizer}
            events={calendarEvents}
            view={view}
            onView={setView}
            date={currentDate}
            onNavigate={setCurrentDate}
            onSelectEvent={handleSelectEvent}
            onSelectSlot={handleSelectSlot}
            selectable
            eventPropGetter={eventStyleGetter}
            messages={{
              today: "Ma",
              previous: "Előző",
              next: "Következő",
              month: "Hónap",
              week: "Hét",
              day: "Nap",
              agenda: "Napirend",
              noEventsInRange: "Nincs edzés ebben az időszakban",
            }}
            formats={{
              monthHeaderFormat: "YYYY. MMMM",
              dayHeaderFormat: "MMMM D., dddd",
              dayRangeHeaderFormat: ({ start, end }) =>
                `${moment(start).format("MMM D.")} – ${moment(end).format("MMM D.")}`,
            }}
          />
        </div>
      </div>

      {/* Create Dialog */}
      <AnimatePresence>
        {isCreateDialogOpen && (
          <motion.div
            initial={{ opacity: 0 }}
