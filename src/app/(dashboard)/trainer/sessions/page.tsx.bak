                    </select>
                  </div>

                  <div className="flex-1">
                    <label className="text-white/60 text-xs block mb-1">Ismétlődés</label>
                    <button
                      type="button"
                      onClick={() => setFormData(prev => ({ ...prev, isRecurring: !prev.isRecurring }))}
                      className={cn(
                        "w-full rounded-xl px-3 py-2.5 text-sm font-medium flex items-center justify-center gap-2 transition-colors",
                        formData.isRecurring 
                          ? "bg-[#D2F159] text-[#171725]" 
                          : "bg-[#252a32] text-white/60"
                      )}
                    >
                      <Repeat className="w-4 h-4" />
                      {formData.isRecurring ? "Heti" : "Egyszeri"}
                    </button>
                  </div>
                </div>
              </div>

              <div className="flex gap-2 p-4 border-t border-white/10 bg-[#171725]">
                <button
                  onClick={() => setIsCreateDialogOpen(false)}
                  className="flex-1 px-3 py-2.5 text-white/60 text-sm rounded-xl hover:bg-white/10"
                >
                  Mégse
                </button>
                <button
                  onClick={handleCreateSession}
                  disabled={saving || !formData.title || !formData.startDate || !formData.startTime || !formData.endDate || !formData.endTime}
                  className="flex-1 px-3 py-2.5 bg-[#D2F159] text-[#171725] text-sm rounded-xl font-semibold disabled:opacity-50 flex items-center justify-center gap-1"
                >
                  {saving ? <Loader2 className="w-4 h-4 animate-spin" /> : <CheckCircle className="w-4 h-4" />}
                  Létrehozás
                </button>
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>

      {/* Edit Dialog */}
      <AnimatePresence>
        {isEditDialogOpen && selectedSession && (
          <motion.div
            initial={{ opacity: 0 }}
            animate={{ opacity: 1 }}
            exit={{ opacity: 0 }}
