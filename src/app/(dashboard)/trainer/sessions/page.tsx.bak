          >
            <div className="absolute inset-0 bg-black/60 backdrop-blur-sm" onClick={() => setIsEditDialogOpen(false)} />
            <motion.div
              initial={{ opacity: 0, scale: 0.95, y: 20 }}
              animate={{ opacity: 1, scale: 1, y: 0 }}
              exit={{ opacity: 0, scale: 0.95, y: 20 }}
              className="relative w-full max-w-md bg-[#1E1E2D] rounded-2xl border border-white/10 shadow-2xl overflow-hidden"
            >
