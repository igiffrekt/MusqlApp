                </div>

                <div className="flex gap-2">
                  <div className="flex-1">
                    <label className="text-white/60 text-xs block mb-1">Típus</label>
                    <select
                      value={formData.sessionType}
                      onChange={(e) => setFormData(prev => ({ ...prev, sessionType: e.target.value }))}
                      className="w-full bg-[#252a32] text-white text-sm rounded-xl px-3 py-2.5 focus:outline-none focus:ring-2 focus:ring-[#D2F159] appearance-none"
