                <div>
                  <label className="text-white/60 text-xs block mb-1">Befejezés *</label>
                  <div className="flex gap-2">
                    <DatePicker
                      value={formData.endDate}
                      onChange={(val) => setFormData(prev => ({ ...prev, endDate: val }))}
                    />
                    <div className="w-28">
                      <TimePicker
                        value={formData.endTime}
