                </div>
              </div>

              <div className="flex gap-2 p-4 border-t border-white/10 bg-[#171725]">
                <button
                  onClick={handleDeleteSession}
                  className="px-3 py-2.5 text-red-400 text-sm rounded-xl hover:bg-red-500/10 flex items-center gap-1"
                >
                  <Trash2 className="w-4 h-4" />
                </button>
                <div className="flex-1" />
                <button
                  onClick={() => setIsEditDialogOpen(false)}
                  className="px-3 py-2.5 text-white/60 text-sm rounded-xl hover:bg-white/10"
                >
                  Mégse
                </button>
                <button
                  onClick={handleEditSession}
                  disabled={saving}
                  className="px-4 py-2.5 bg-[#D2F159] text-[#171725] text-sm rounded-xl font-semibold disabled:opacity-50 flex items-center gap-1"
                >
                  {saving ? <Loader2 className="w-4 h-4 animate-spin" /> : <CheckCircle className="w-4 h-4" />}
                  Mentés
                </button>
              </div>
            </motion.div>
          </motion.div>
        )}
      </AnimatePresence>
    </div>
  )
}

export default function SessionsPage() {
  return (
    <Suspense fallback={<div className="flex items-center justify-center h-64"><Loader2 className="w-8 h-8 text-[#D2F159] animate-spin" /></div>}>
      <SessionsPageContent />
    </Suspense>
  )
}
