  const eventStyleGetter = (event: CalendarEvent) => {
    const session = event.resource
    const isFull = (session._count?.attendances || 0) >= session.capacity
    const isPast = new Date(session.startTime) < new Date()

    let backgroundColor = "#D2F159"
    let textColor = "#171725"
    
    if (session.sessionType === "PRIVATE") { backgroundColor = "#3B82F6"; textColor = "white" }
    if (isFull) { backgroundColor = "#EF4444"; textColor = "white" }
    if (isPast) { backgroundColor = "#374151"; textColor = "#9CA3AF" }

    return {
      style: {
        backgroundColor,
        color: textColor,
        borderRadius: "8px",
        border: "none",
        padding: "2px 6px",
        fontSize: "12px",
        fontWeight: 500,
      },
    }
  }

  const SESSION_TYPES = [
    { value: "GROUP", label: "Csoportos" },
    { value: "PRIVATE", label: "Egyéni" },
  ]

  if (loading) {
    return (
      <div className="flex items-center justify-center h-64">
