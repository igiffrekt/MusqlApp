              className="relative w-full max-w-md bg-[#1E1E2D] rounded-2xl border border-white/10 shadow-2xl overflow-hidden"
            >
              <div className="flex items-center justify-between p-4 border-b border-white/10">
                <h2 className="text-lg font-bold text-white">Új edzés</h2>
                <button onClick={() => setIsCreateDialogOpen(false)} className="p-1.5 text-white/40 hover:text-white rounded-lg hover:bg-white/10">
                  <X className="w-5 h-5" />
                </button>
              </div>

              <div className="p-4 space-y-3 max-h-[70vh] overflow-y-auto">
                <div>
                  <label className="text-white/60 text-xs block mb-1">Edzés neve *</label>
                  <input
                    type="text"
                    value={formData.title}
                    onChange={(e) => setFormData(prev => ({ ...prev, title: e.target.value }))}
                    placeholder="pl. Kezdő csoport"
                    className="w-full bg-[#252a32] text-white text-sm rounded-xl px-3 py-2.5 placeholder-white/30 focus:outline-none focus:ring-2 focus:ring-[#D2F159]"
                  />
                </div>

                {locations.length > 0 && (
                  <div>
                    <label className="text-white/60 text-xs block mb-1">Helyszín</label>
                    <select
                      value={formData.locationId}
                      onChange={(e) => setFormData(prev => ({ ...prev, locationId: e.target.value }))}
                      className="w-full bg-[#252a32] text-white text-sm rounded-xl px-3 py-2.5 focus:outline-none focus:ring-2 focus:ring-[#D2F159] appearance-none"
                    >
                      {locations.map(loc => (
